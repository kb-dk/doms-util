<project name="dist">

    <property name="global.dir" value="${basedir}/.."/>

    <import file="build-dependencies.xml"/>

    <property file="${global.dir}/build.properties"/>

    <property name="dist.name" value="${ant.project.name}-${version}"/>
    <property name="dist.zip" value="${dist.name}.zip"/>
    <property name="dist.src.zip" value="${dist.name}-src.zip"/>

    <dirname property="dist.basedir" file="${ant.file.dist}"/>

    <target name="distclean">
        <delete dir="${global.dir}/dist"/>
        <delete  dir="libtemp"/>
        <delete  dir="apidocstemp"/>
        <delete  dir="licensetemp"/>



        <subant target="clean">
            <fileset dir="." includes="**/build.xml"/>
        </subant>

    </target>

    <dirset id="project.modules" dir="${global.dir}/modules">
        <include name="*"/>
        <include name="*/*"/>
    </dirset>

    <target  name="_predist.bin"/>
    <target name="_postdist.bin"/>

    <target name="dist.bin" depends="_predist.bin">
        <delete  dir="dist"/>
        <mkdir dir="dist"/>
        <mkdir dir="libtemp"/>
        <mkdir dir="apidocstemp"/>
        <mkdir dir="licensestemp"/>

        <dependsloop target="all" dependencies="project.modules"/>

        <convertPath dirset="project.modules" postfix="/dist/**/*.jar" newfileset="project.modules.jars"/>

        <convertPath dirset="project.modules" postfix="/dist/**/*-apidocs.zip" newfileset="project.modules.apidocs"/>

        <convertPath dirset="project.modules" postfix="**/license/*" newfileset="project.modules.licenses"/>

        <copy todir="libtemp" flatten="true" failonerror="false">
            <fileset dir="${global.dir}/lib">
                <include name="**/jars/*.jar"/>
            </fileset>
            <fileset refid="project.modules.jars"/>
        </copy>

        <copy todir="apidocstemp" flatten="true">
            <fileset refid="project.modules.apidocs"/>
        </copy>

        <copy todir="licensestemp"><!--TODO licenses from module libs??-->
            <fileset refid="project.modules.licenses"/>
            <fileset dir="lib/">
                <include name="**/license/*"/>
            </fileset>
            <regexpmapper from="(.*)/license(/.*)" to="\1\2"/>
        </copy>


        <zip destfile="dist/${dist.zip}">
            <zipfileset prefix="${dist.name}/jars" dir="libtemp">
            </zipfileset>
            <zipfileset prefix="${dist.name}/license" dir="licensestemp"/>
            <zipfileset prefix="${dist.name}/license" dir="${global.dir}">
                <include name="LICENSE"/>
                <include name="NOTICE"/>
                <include name="README"/>
            </zipfileset>
            <zipfileset prefix="${dist.name}/apidocs" dir="apidocstemp">
            </zipfileset>
        </zip>

        <delete dir="libtemp"/>
        <delete dir="apidocstemp"/>
        <delete dir="licensestemp"/>

        <antcall target="_postdist.bin"/>
    </target>


    <target name="_predist.src"/>
    <target name="_postdist.src"/>

    <target name="dist.src" depends="distclean,_predist.src">
        <mkdir dir="${global.dir}/dist"/>

        <zip destfile="dist/${dist.src.zip}">
            <zipfileset prefix="${dist.name}" dir=".">
            </zipfileset>
        </zip>

        <antcall target="_postdist.src"/>
    </target>

    <target name="clean">
        <delete dir="dist"/>
        <delete dir="libtemp"/>
        <delete dir="apidocstemp"/>
        <delete dir="licensestemp"/>
    </target>

</project>